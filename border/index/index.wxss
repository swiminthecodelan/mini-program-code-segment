.button-container {
  display: flex;
  flex-direction: column-reverse;
  width: 100rpx;
  height: 100rpx;
  background-color: aqua;
  border-bottom: #0c0c0c solid 1rpx;
}

.button-container::after {
  width: 100%;
  height: 1rpx;
  background: #f10707;
  content: '';
}

.button-vertical-line-container {
  display: flex;
  flex-grow: 1;
}

.button-vertical-line-container::before {
  position: relative;
  left: 50%;
  width: 1rpx;
  height: 100%;
  background: #f10707;
  content: '';
}
